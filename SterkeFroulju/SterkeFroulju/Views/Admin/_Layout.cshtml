@using WZWVAPI
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Sterke Froulju backend</title>
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    @*<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")"></script>
        <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")"></script>*@
</head>
<body>
    <div>
        <nav class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">Sterke Froulju backend</a>
                </div>

                @if (UserHandler.IsLoggedIn())
                {
                    <div class="nav navbar-nav navbar-right">
                        <a class="navbar-brand" href="#">Welkom @UserHandler.GetLoggedInUser().Username</a>
                    </div>
                }
                else
                {
                    <div id="navbar" class="navbar-collapse collapse">
                        @using (Html.BeginForm("Login", "Admin", FormMethod.Post, new { @class = "navbar-form navbar-right" }))
                        {
                            <fieldset>
                                <div class="form-group">
                                    <input name="UserName" type="text" placeholder="Gebruikersnaam" class="form-control">
                                </div>
                                <div class="form-group">
                                    <input name="Password" type="password" placeholder="Wachtwoord" class="form-control">
                                </div>
                                <button type="submit" class="btn btn-success">Login</button>
                            </fieldset>
                        }
                    </div><!--/.navbar-collapse -->
                }

            </div>
        </nav>
    </div>
    <div class="container">
        @RenderBody()
        <footer>
            <p>&copy; Sterke Froulju @DateTime.Now.Year</p>
        </footer>
    </div>


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="">@Url.Content("~/Scripts/bootstrap.min.js")</script>
</body>
</html>
